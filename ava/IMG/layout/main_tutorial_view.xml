<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tutorial"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:alpha="0.8"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/main_tutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_marginTop="16.667dp"
        android:layout_marginRight="16.667dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/tutorial_close_txt"
            android:layout_marginRight="7.667dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/tutorial_close"
            android:src="@drawable/tutorial_close_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tutorial_page_select1"
            android:src="@drawable/tutorial_select_on"
            android:layout_marginRight="6.667dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/tutorial_page_select2"
            android:src="@drawable/tutorial_select_off"
            android:layout_marginLeft="6.667dp"
            android:layout_marginRight="6.667dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/tutorial_page_select3"
            android:src="@drawable/tutorial_select_off"
            android:layout_marginLeft="6.667dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>