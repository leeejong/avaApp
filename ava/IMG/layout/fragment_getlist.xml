<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neowiz.pmang.avasupplysection.ItemgetFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/getlist_bar_height">

        <View
            android:background="@color/news_line_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/getlist_tab_color"
            android:layout_width="match_parent"
            android:layout_height="48dp">

                <ImageView
                    android:src="@drawable/getlist_tap_getitem"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/getlist_tap_type"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:src="@drawable/getlist_tap_date"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:background="@color/news_line_color"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/getlist_listview"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:layout_marginTop="@dimen/getlist_bar_height"
        android:layout_marginBottom="@dimen/menu_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    <RelativeLayout
        android:id="@+id/getlist_listview_nodata"
        android:layout_marginTop="@dimen/getlist_bar_height"
        android:layout_marginBottom="@dimen/menu_height"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/getlist_nodata_img"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <View
                android:background="@color/getlist_list_nodata_line_color"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/getlist_nodata_txt"
                android:layout_width="wrap_content"
                android:layout_height="49dp" />

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
